{
    "manifest_version": 3,
    "name": "השוואת פוסטים",
    "version": "1.0",
    "description": "תוסף שמוסיף כפתורי השוואה לפוסטים בפייסבוק ושומר פריטים ב-localStorage.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "השוואה"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.facebook.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [ "https://www.facebook.com/*" ],
            "js": [ "content.js" ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "compare.html", "compare.js", "icons/icon16.png" ],
            "matches": [ "<all_urls>" ]
        }
    ]
}
